<FindBugsFilter>
    <Match>
        <Bug pattern="SE_BAD_FIELD,SE_BAD_FIELD_STORE,SE_NO_SUITABLE_CONSTRUCTOR,SE_TRANSIENT_FIELD_NOT_RESTORED"/>
        <!--
        writeReplace makes objects serializable. This is a limitation of FindBugs as discussed here:
        http://stackoverflow.com/questions/26156523/is-writeobject-not-neccesary-using-the-serialization-proxy-pattern
        -->
    </Match>
    <Match>
        <Class name="dm.shakespeare2.util.TimeUnits"/>
        <Method name="~waitSince.*"/>
        <Bug pattern="WA_NOT_IN_LOOP"/>
    </Match>
    <Match>
        <Class name="dm.shakespeare2.executor.TimeoutExecutorService"/>
        <Method name="timeout"/>
        <Bug pattern="ST_WRITE_TO_STATIC_FROM_INSTANCE_METHOD"/>
    </Match>
</FindBugsFilter>
